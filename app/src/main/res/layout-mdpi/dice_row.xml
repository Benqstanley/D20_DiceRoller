<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="7"
    android:id="@+id/collection_row">

    <EditText
        android:imeOptions="flagNoExtractUi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.6"
        android:textSize="14sp"
        android:hint="# of Dice"
        android:id="@+id/dice_input"
        android:inputType="number"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight=".2"
        android:textSize="14sp"
        android:text="x"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1.75"
        android:id="@+id/dice_spinner"
        android:spinnerMode="dropdown"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight=".2"
        android:textSize="14sp"
        android:text="+"/>

    <EditText
        android:imeOptions="flagNoExtractUi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:hint="@string/modifier"
        android:id="@+id/constant_input"
        android:inputType="numberSigned"
        android:textSize="14sp"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".1"
        />
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight=".6"
        android:id="@+id/sum_row"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".2"
        />
    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".7"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:id="@+id/toggle_roll"
        android:checked="true" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight=".65"
        />

</LinearLayout>